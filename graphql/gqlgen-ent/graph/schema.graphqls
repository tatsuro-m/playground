# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  userID: String!
}

type User {
  id: ID!
  name: String!
}

extend type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

extend type Mutation {
  createTodo(input: NewTodo!): Todo!
}
